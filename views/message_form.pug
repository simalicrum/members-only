extends layout

block content
  div.h-screen.w-screen.bg-gray-500.flex.items-center.justify-center.flex-col
    form.container.bg-white.mx-auto.p-6.grid.grid-cols-1.gap-3.self-center(class="sm:max-w-lg sm:shadow-lg sm:rounded-lg" method="POST" action="")
      h2.text-gray-900.font-semibold Add a message
      label.block
        span.text-gray-700.text-sm Message title
        input(type="text" name="title" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0")
      label.block
        span.text-gray-700.text-sm Enter your message
        textarea(name="message" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" rows="3" style="margin-top: 4px; margin-bottom: 0px; height: 85px;")
      button.bg-gray-400.text-white.rounded-md.mt-1(type="submit" class="py-2.5") Submit
    div.m-4
      a.text-white.text-sm(href="/") Home 
      span.text-gray-400.text-sm.m-1 · 
      a.text-white.text-sm(href="/login") Login 
      span.text-gray-400.text-sm.m-1 · 
      a.text-white.text-sm(href="/signup") Sign up